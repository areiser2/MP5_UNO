<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/confetti">>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNO WINNER"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="serif-monospace" />

    <TextView
        android:id="@+id/theWinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="theWinner"
        android:textSize="30sp"
        app:fontFamily="cursive" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        app:srcCompat="@drawable/thumbup" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNO LOSER"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="serif-monospace" />

    <TextView
        android:id="@+id/theLoser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="theLoser"
        android:textSize="30sp"
        app:fontFamily="casual" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        app:srcCompat="@drawable/thumbdown" />

</LinearLayout>